{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "paths": {
      "secure-s3-store": ["../secure-s3-store/dist/src/index.d.ts"],
      "secure-s3-store/*": ["../secure-s3-store/dist/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../secure-s3-store" }
  ]
}
